                    <div id="socialDropdown" class="social-dropdown">
                        <div class="social-icons-container">
                            <div class="social-icons-row">
                                <a href="https://www.facebook.com/YOUR_PROFILE" target="_blank" class="social-icon facebook">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                                <a href="https://www.linkedin.com/in/YOUR_PROFILE" target="_blank" class="social-icon linkedin">
                                    <i class="fab fa-linkedin-in"></i>
                                </a>
                            </div>
                            <div class="social-icons-row">
                                <a href="https://wa.me/8801XXXX-XXXXX" target="_blank" class="social-icon whatsapp">
                                    <i class="fab fa-whatsapp"></i>
                                </a>
                                <a href="https://goo.gl/maps/YOUR_MAP_LINK_HERE" target="_blank" class="social-icon maps">
                                    <i class="fa-solid fa-map-pin"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer">
            Developed by Masco IT Department
            <div class="developer-credit">MRATâ“’</div>
        </div>
    </div>
    <script>
        // Developed by MRAT
        document.addEventListener('DOMContentLoaded', function() {
            // Enhanced scroll animations with staggered timing
            const elements = document.querySelectorAll('.detail-item, .social-icon, .action-button, .profile-image, .profile-info');
            const observer = new IntersectionObserver((entries) => {
                entries.forEach((entry, index) => {
                    if (entry.isIntersecting) {
                        setTimeout(() => {
                            entry.target.style.opacity = '1';
                            entry.target.style.transform = 'translateY(0)';
                        }, index * 100);
                    }
                });
            }, { threshold: 0.1 });
            
            elements.forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(20px)';
                el.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                observer.observe(el);
            });

            // Add micro-interaction for card container
            const cardContainer = document.querySelector('.card-container');
            cardContainer.addEventListener('mousemove', (e) => {
                const { left, top, width, height } = cardContainer.getBoundingClientRect();
                const x = (e.clientX - left) / width - 0.5;
                const y = (e.clientY - top) / height - 0.5;
                
                cardContainer.style.transform = `perspective(1000px) rotateY(${x * 2}deg) rotateX(${-y * 2}deg)`;
            });
            
            cardContainer.addEventListener('mouseleave', () => {
                cardContainer.style.transform = 'perspective(1000px) rotateY(0) rotateX(0)';
            });
        });

        // Save dropdown functionality
        const saveButton = document.getElementById('saveButton');
        const saveDropdown = document.getElementById('saveDropdown');
        const saveContactButton = document.getElementById('saveContactButton');
        
        saveButton.addEventListener('click', function(event) {
            event.stopPropagation();
            saveDropdown.classList.toggle('show');
            // Close social dropdown if open
            if (socialDropdown.classList.contains('show')) {
                socialDropdown.classList.remove('show');
            }
        });
        
        // Social dropdown functionality
        const socialButton = document.getElementById('socialButton');
        const socialDropdown = document.getElementById('socialDropdown');
        
        socialButton.addEventListener('click', function(event) {
            event.stopPropagation();
            socialDropdown.classList.toggle('show');
            // Close save dropdown if open
            if (saveDropdown.classList.contains('show')) {
                saveDropdown.classList.remove('show');
            }
        });
        
        window.addEventListener('click', function(event) {
            if (!saveButton.contains(event.target) && !socialButton.contains(event.target)) {
                if (saveDropdown.classList.contains('show')) {
                    saveDropdown.classList.remove('show');
                }
                if (socialDropdown.classList.contains('show')) {
                    socialDropdown.classList.remove('show');
                }
            }
        });

        // PDF and image generation
        const { jsPDF } = window.jspdf;
        const cardElement = document.getElementById('digital-card');
        const actionSection = document.getElementById('action-section');

        // Function to generate and download vCard
        function saveContact() {
            const vCardData = `BEGIN:VCARD
VERSION:3.0
FN:Your Name
ORG:Masco Group
TITLE:Your Designation
EMAIL:your.email@example.com
TEL;TYPE=CELL:+88 (01) XXXX-XXXXX
TEL;TYPE=WORK:000-000-0000
URL:https://www.mascoknit.com
END:VCARD`;
            
            const blob = new Blob([vCardData], { type: 'text/vcard' });
            const url = URL.createObjectURL(blob);
            const link = document.createElement('a');
            link.href = url;
            link.download = 'Masco_Contact_YourName.vcf';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            URL.revokeObjectURL(url);
            saveDropdown.classList.remove('show');
        }

        async function downloadImage() {
            actionSection.style.display = 'none';
            saveDropdown.classList.remove('show');
            
            await new Promise(r => setTimeout(r, 100));
            
            try {
                const canvas = await html2canvas(cardElement, { 
                    useCORS: true,
                    scale: 2,
                    logging: false,
                    backgroundColor: '#ffffff'
                });
                
                const imgData = canvas.toDataURL('image/png');
                const link = document.createElement('a');
                link.href = imgData;
                link.download = 'Masco_Digital_Card.png';
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
            } catch (err) {
                console.error('Image capture failed:', err);
                alert('Failed to generate image. Please ensure all content (especially images) is loaded correctly.');
            } finally {
                actionSection.style.display = 'block';
            }
        }

        async function downloadPdf() {
            actionSection.style.display = 'none';
            saveDropdown.classList.remove('show');
            
            await new Promise(r => setTimeout(r, 100));
            
            try {
                const canvas = await html2canvas(cardElement, {
                    useCORS: true,
                    scale: 2,
                    logging: false,
                    backgroundColor: '#ffffff'
                });
                
                const imgData = canvas.toDataURL('image/jpeg', 1.0);
                const imgWidth = 54; // Standard business card width in mm
                const pageHeight = 85; // Standard business card height in mm
                const imgHeight = canvas.height * imgWidth / canvas.width;
                
                const pdf = new jsPDF({
                    orientation: 'portrait',
                    unit: 'mm',
                    format: [imgWidth, pageHeight] // Custom format size for a business card ratio
                });

                pdf.addImage(imgData, 'JPEG', 0, 0, imgWidth, imgHeight);
                pdf.save('Masco_Digital_Card.pdf');
            } catch (err) {
                console.error('PDF generation failed:', err);
                alert('Failed to generate PDF.');
            } finally {
                actionSection.style.display = 'block';
            }
        }

        // Attach event listeners
        saveContactButton.addEventListener('click', saveContact);
        document.getElementById('downloadImageButton').addEventListener('click', downloadImage);
        document.getElementById('downloadPdfButton').addEventListener('click', downloadPdf);

    </script>
</body>
</html>
